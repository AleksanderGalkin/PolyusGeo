@{
    Layout = null;
}

    <!-- Заголовок модального окна -->
        <div class="modal-header">
            <button type="button" class="close"  aria-hidden="true"  ng-click="cancel()">×</button>
            <h5 class="modal-title">Заголовок модального окна</h5>
        </div>
        <!-- Основное содержимое модального окна -->
        <div class="modal-body">
            <div class="container-fluid">
                <label for="sel_comment" class="control-label">Комментарий</label>
                <select id ="sel_comment" class="form-control" ng-model="s_block.COMMENT" required>
                    <option value="Подошва ГМ">Подошва ГМ</option>
                    <option value="Взорванная ГМ">Взорванная ГМ</option>
                </select>
            </div>
        </div>
        <!-- Футер модального окна -->
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" ng-click="ok()">Сохранить изменения</button>
            <button type="button" class="btn btn-warning" ng-click="cancel()">Закрыть</button>
        </div> 
